---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.(md|mdx)$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const pubDateISO = post.data.pubDate.toISOString();
const pubDateFormatted = post.data.pubDate.toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
const updatedDateFormatted = post.data.updatedDate?.toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  articleDate={pubDateISO}
>
  <article data-testid="blog-post">

    <!-- Post Header -->
    <header class="mb-10 pb-8 border-b border-slate-100">
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <time
          datetime={pubDateISO}
          class="text-sm text-slate-400 tabular-nums"
        >
          {pubDateFormatted}
        </time>
        {updatedDateFormatted && (
          <span class="text-sm text-slate-400">
            · Updated {updatedDateFormatted}
          </span>
        )}
        {post.data.tags.map((tag) => (
          <span class="text-xs bg-slate-100 text-slate-500 px-2 py-0.5 rounded-full">
            {tag}
          </span>
        ))}
      </div>
      <h1 class="text-3xl font-bold tracking-tight text-slate-900 leading-snug">
        {post.data.title}
      </h1>
      <p class="mt-3 text-lg text-slate-500 leading-relaxed">
        {post.data.description}
      </p>
    </header>

    <!-- Post Body — Tailwind Typography -->
    <div class="prose prose-slate prose-lg max-w-none
                prose-headings:font-bold prose-headings:tracking-tight
                prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
                prose-code:text-blue-700 prose-code:bg-slate-50 prose-code:rounded prose-code:px-1
                prose-pre:bg-slate-900 prose-pre:text-slate-100">
      <Content />
    </div>

    <!-- Back link -->
    <footer class="mt-12 pt-8 border-t border-slate-100">
      <a
        href="/blog"
        class="text-sm text-slate-500 hover:text-blue-600 transition-colors"
      >
        ← Back to all posts
      </a>
    </footer>

  </article>
</BaseLayout>
