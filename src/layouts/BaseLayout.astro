---
// src/layouts/BaseLayout.astro
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  articleDate?: string; // ISO String for structured data
}

const {
  title,
  description,
  image = '/social-default.jpg',
  articleDate,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteTitle = 'Tudor Moldovan | QA & Tech';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content={articleDate ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    {articleDate && <meta property="article:published_time" content={articleDate} />}

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />
  </head>

  <body class="bg-white text-slate-900 antialiased min-h-screen flex flex-col">

    <!-- Semantic Header -->
    <header class="border-b border-slate-100 py-4" data-testid="site-header">
      <div class="max-w-4xl mx-auto px-4 flex justify-between items-center">
        <a
          href="/"
          class="font-bold text-xl tracking-tight hover:text-blue-600 transition-colors"
          aria-label="Go to homepage"
        >
          Tudor<span class="text-blue-600">.qa</span>
        </a>
        <nav aria-label="Main navigation" data-testid="main-nav">
          <ul class="flex space-x-6 text-sm font-medium text-slate-600">
            <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
            <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main
      class="flex-grow max-w-4xl mx-auto w-full px-4 py-8"
      data-testid="main-content"
    >
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-100 py-8 mt-auto" data-testid="site-footer">
      <div class="max-w-4xl mx-auto px-4 text-center text-slate-500 text-sm">
        &copy; {new Date().getFullYear()} Tudor Moldovan. Built with Astro &amp; Tailwind.
      </div>
    </footer>

  </body>
</html>
